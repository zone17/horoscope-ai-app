{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "functions": {
    "src/app/api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-horoscope",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "FEATURE_FLAG_USE_REDIS_CACHE": "true",
    "FEATURE_FLAG_USE_RATE_LIMITING": "true",
    "FEATURE_FLAG_USE_XML_SITEMAP": "true"
  }
} 